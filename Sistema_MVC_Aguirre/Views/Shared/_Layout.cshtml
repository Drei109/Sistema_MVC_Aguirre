@{ 
    string controlador = ViewContext.RouteData.Values["controller"].ToString().ToLower();
    Sistema_MVC_Aguirre.Models.Usuario usuario = new Sistema_MVC_Aguirre.Models.Usuario().Obtener(Sistema_MVC_Aguirre.Models.SessionHelper.GetUser());
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <!-- Bootstrap -->
    <link href="~/Assets/css/bootstrap.min.css" rel="stylesheet" />    
    <link href="~/Assets/css/bootstrap4-hello-world.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Fredoka+One|Roboto:300,400" rel="stylesheet">
    <!-- Custom -->
    <link href="~/Assets/css/estilos.css" rel="stylesheet" />
    <!-- DataTable -->
    <link href="~/Assets/DataTables/datatables.min.css" rel="stylesheet" />    
    <link href="~/Assets/DataTables/css/dataTables.foundation.min.css" rel="stylesheet" />            
    <script src="~/Assets/js/jquery-3.1.1.min.js"></script>
    <title>@ViewBag.Title</title>
</head>
<body>
    <div> 
        @if (!controlador.Equals("login"))
        {
            <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
                <div class="container">
                    <div class="collapse navbar-collapse" id="menu">
                        <ul class="navbar-nav mr-auto mt-2 mt-md-0">
                            <li><a class="navbar-brand t-h5" href="#">SISTEMA MVC</a></li>
                            <li class="nav-item dropdown t-h5">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    MANTENIMIENTO
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item t-h5" href="~/Categoria/Index">Categoría</a>
                                    <a class="dropdown-item t-h5" href="~/Documento/Index">Documento</a>
                                    <a class="dropdown-item t-h5" href="~/Galeria/Index">Galería</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item t-h5" href="~/Persona/Index">Persona</a>
                                    <a class="dropdown-item t-h5" href="~/Usuario/Index">Usuario</a>
                                </div>
                                                           
                            </li>
                            <li>
                                <img src="~/Uploads/@usuario.avatar" alt="Nope" height="45" width="45" />
                            </li>
                            <li class="nav-item dropdown t-h5 my-2 my-lg-0">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <b>Hola</b>, @usuario.Persona.nombre, @usuario.Persona.apellido
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
									<a class="dropdown-item t-h5" href="~/Perfil/Index">Perfil de Usuario</a>
									<a class="dropdown-item t-h5" href="~/Login/Logout">Cerrar Sesión</a>
                                </div>  
                            </li>                              
                        </ul>
                    </div>
                </div>
            </nav>
        }
        
        <br />
        <div class="container body-content">
            <div class="jumbotron">
                <h2 class="display-4"><b>@ViewBag.Title</b></h2>
                <hr />
                @RenderBody()    
            </div>
            <hr />
            <footer>
                <h5>&copy; @DateTime.Now.Year - Aguirre </h5>
            </footer>
            
        </div>

        
        <script src="~/Assets/js/bootstrap.min.js"></script>        
        <script src="~/Assets/DataTables/datatables.min.js"></script>     
        <!-- Login -->
        <script src="~/Assets/js/ini.js"></script>
        <script src="~/Assets/js/jquery.form.js"></script>
        <script src="~/Assets/js/jquery.validate.min.js"></script>
        <script src="~/Assets/js/jquery.validate.unobtrusive.min.js"></script>

        <script>
            $(document).ready(function () {
                $("#datatable").DataTable({

                    "aLengthMenu": [[5, 10, 25, 50, 100, -1], [5, 10, 25, 50, 100, "Todos"]],
                    "bDestroy": true,
                    "language": {
                        "sProcessing": "Procesando...",
                        "sLengthMenu": "Mostrar _MENU_ registros",
                        "sZeroRecords": "No se encontraron resultados",
                        "sEmptyTable": "Ningún dato disponible en esta tabla",
                        "sInfo": "Mostrando registros del _START_ al _END_ de un total de _TOTAL_ registros",
                        "sInfoEmpty": "Mostrando registros del 0 al 0 de un total de 0 registros",
                        "sInfoFiltered": "(filtrado de un total de _MAX_ registros)",
                        "sInfoPostFix": "",
                        "sSearch": "Buscar:",
                        "sUrl": "",
                        "sInfoThousands": ",",
                        "sLoadingRecords": "Cargando...",
                        "oPaginate": {
                            "sFirst": "Primero",
                            "sLast": "Último",
                            "sNext": "Siguiente",
                            "sPrevious": "Anterior"
                        },
                        "oAria": {
                            "sSortAscending": ": Activar para ordenar la columna de manera ascendente",
                            "sSortDescending": ": Activar para ordenar la columna de manera descendente"
                        }
                    }
                });

                $('#ejemplo2').DataTable({
                    "paging": true,
                    "lengthChange": false,
                    "searching": false,
                    "ordering": true,
                    "info": true,
                    "autoWidth": false,
                    "aLengthMenu": [[5, 10, 25, 50, -1], [5, 10, 25, 50, "Todos"]]
                });

                $('#vertical').DataTable({
                    "scrollY": "200px",
                    "scrollCollapse": true,
                    "paging": false
                });
            });
        </script>
    </div>
</body>
</html>

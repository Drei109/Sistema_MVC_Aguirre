@model Sistema_MVC_Aguirre.Models.Categoria
@{ 
    ViewBag.Title = "CATEGORÍA - DETALLE";
}

<ol class="breadcrumb h4">
    <li><a href="~/Categoria/Index">CATEGORÍA</a></li>
    <li class="active">@Model.nombre</li>
</ol>

<div class="panel panel_default h4">
    <div class="panel-heading">
        Información de la categoría
    </div>
    <div class="panel-body">
        <dl class="dl-horizontal">
            <dt>ID</dt>
            <dd>@Model.categoria_id</dd>
            <dt>NOMBRE</dt>
            <dd>@Model.nombre</dd>
            <dt>DESCRIPCIÓN</dt>
            <dd>@Model.descripcion</dd>
            <dt>ESTADO</dt>
            <dd>@(Model.estado == "A" ? "Activo" : "Inactivo")</dd>
        </dl>
    </div>
</div>